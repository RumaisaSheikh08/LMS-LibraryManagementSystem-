
@{
    ViewData["Title"] = "Dashboard";
}
<style>
    .stdHead {
        padding: 30px;
        margin-left: 480px;
    }

    .subHead{
        margin-left: -180px;
    }
    


</style>
<div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#" style="color:black;">Bradford Library</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="#" style="color:black;">@ViewBag.Email</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Logout", "Librarian")" style="color:black;">Logout</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <div class="stdHead">
        <h2>Welcome! @ViewBag.Name</h2>
        <p class="subHead">
            You are now logged into the system and can manage books, students, and lending operations
        </p>
    </div>


    <div class="d-flex justify-content-center gap-3">
        <div class="card" style="width: 30rem; margin-left: 20px; height: 30rem;">
            <img src="~/img/markus-spiske-GQXtl7L4Ldc-unsplash.jpg" class="card-img-top" alt="..." style="height: 50%">
            <div class="card-body">
                <h5 class="card-title">Student Registeration</h5>
                <p class="card-text">
                    Manage student records with ease. Add, update, or remove student information. Track borrowing history and registration status.
                    Keep your student database organized and up to date. Ensure quick access to accurate student details.
                </p>
                <a class="btn btn-outline-primary w-100" href="@Url.Action("StudentRegisteration", "Librarian")">Register</a>
            </div>
        </div>

        <div class="card" style="width: 30rem; height: 30rem;">
            <img src="~/img/kelsey-todd-tPpca3wSUw4-unsplash.jpg" class="card-img-top" alt="..." style="height: 50%">
            <div class="card-body">
                <h5 class="card-title">Book Inventory</h5>
                <p class="card-text">
                    Efficiently manage your library's book inventory. Add new titles, update stock levels, or remove outdated books. Track availability and ensure every book is accounted for.
                    Keep your collection organized and up to date.
                </p>
                <a class="btn btn-outline-primary w-100" href="@Url.Action("BookManagement", "Librarian")">Manage</a>
            </div>
        </div>

        <div class="card" style="width: 30rem; height: 30rem;">
            <img src="~/img/firmbee-com-jrh5lAq-mIs-unsplash.jpg" class="card-img-top" alt="..." style="height: 50%">
            <div class="card-body">
                <h5 class="card-title">Generate Reports</h5>
                <p class="card-text">
                    Generate detailed reports with just a click. Track student activities, issued books, returns, and overdue items. Export data for audits or performance reviews.
                    Make data-driven decisions for better library management.
                </p>
                <a class="btn btn-outline-primary w-100" href="@Url.Action("GenerateReports", "Librarian")">Generate</a>
            </div>
        </div>

    <div />

</div>

</div>