
@{
    @model AdminModel
    ViewData["Title"] = "Login";
}

<style>
    .card {
        width: 18rem;
        margin-left: 500px;
    }

    h5, p {
        margin-left: 200px;
    }

    p {
        margin-left: 140px;
    }

    img {
        height: 250px;
    }

    button {
        margin-left: 200px;
        padding-right: 50px;
        padding-left: 50px;
        padding-top: 10px;
        padding-bottom: 10px;
        background-color: #578e87;
        border-radius: 10px;
    }

    .container {
        margin-left: 100px;
        color: red;
        margin-top: 10px;
    }
    .loginButton{
        background-color: darkolivegreen;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease, transform 0.2s ease;
        cursor: pointer;
        margin-left: 230px;
    }

    .loginButton:hover {
        background-color: seagreen;
        transform: scale(1.05);
    }

    .logoHead {
        margin-left: -1050px;
        padding-top: 12px;
        font-family: "Dancing Script", cursive;
        font-size: 30px;
    }
</style>

<div style="width: 100%; height: 50px; text-align: center; line-height: 50px;display: flex; align-items: center; justify-content: center; gap: 10px;">
    <h4 class="logoHead">Bradford Library</h4>
</div>
<div>
    <div class="card" style="width: 35rem; margin-left:370px; margin-top:-8px; background-color:#fdb750; border-block:solid">
        <img src="~/img/istockphoto-512622620-612x612.jpg" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">Librarian Login</h5>
            <p class="card-text" style="margin-left: 110px;">Welcome Back! Ready to Manage the Library</p>
            <div class="container">
                @if (TempData["Error"]?.ToString() == "Invalid email or password.")
                {
                    <h6>Invalid Email or Password. Please try again.</h6>
                }
            </div>

            <form asp-controller="Librarian" asp-action="Login" method="post">
                <div class="mb-3 row">
                    <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" asp-for="Email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" asp-for="Password" class="form-control" id="inputPassword">
                    </div>
                </div>
                <button class="loginButton">Login</button>
            </form>

        </div>
    </div>
</div>
