
@{
    @model StudentModel;
    ViewData["Title"] = "RegisterStudent";
}

<<style>
     .card {
         width: 18rem;
         margin-left: 500px;
     }

     h5, p {
         margin-left: 200px;
     }

     p {
         margin-left: 140px;
     }

     img {
         height: 250px;
     }

     button {
         margin-left: 220px;
         border-radius: 8px;
     }

     .bookAvailable{
         margin-left: 35px;
         margin-top: 12px;
         color:red;
     }
</style>

<div>
    <div class="card" style="width: 35rem; margin-left:380px; margin-top:30px;">
        <img src="~/img/mika-baumeister-dP4Ymu6aujA-unsplash.jpg" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title" style="margin-left:170px;">Registeration Form</h5>
            <p class="card-text" style="margin-left: 5px; font-size: 14px;"> Register now to unlock a world of books and enjoy a seamless reading experience!</p>

            <form asp-controller="Student" asp-action="RegisterStudent" method="post">
                <div class="mb-3 row">
                    <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="name" class="form-control" asp-for=Name id="exampleFormControlInput1">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10"> 
                        <input type="email" class="form-control" asp-for=Email id="exampleFormControlInput1" placeholder="name@example.com">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" asp-for=Password id="inputPassword">
                    </div>
                </div>
                <button style="color: black;border-color: black;">Register</button> 
            </form>
            @if (Convert.ToString(@TempData["RegisterationStatus"]) == "Request Sent")
            {
                <div class="container">
                    <h6 class="bookAvailable">Request for registeration has been sent. You'll be notified soon</h6>
                </div>
            }
        </div>
    </div>
</div>







